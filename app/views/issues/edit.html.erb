<h2> Edit Issue </h2>

<form method="post" action="/issues/<%=@issue.id%>">
<input id="hidden" type="hidden" name="_method" value="PATCH">

  <label for="title"> Title*: </label><br>
  <input id="title" type="text" name="title" value="<%= @issue.title %>"></input><br></br>
  <label for="status"> Status*: </label><br>
  <input id="status" type="text" name="status" value="<%= @issue.status %>"></input><br></br>
  <label for="owner"> Owner: </label><br>
  <input id="owner" type="text" name="owner" value="<%= @issue.owner %>"></input><br></br>
  <label for="created"> Created: </label><br>
  <input id="created" type="text" name="created" value="<%= @issue.created %>"></input><br></br>  
  <label for="completion"> Completion: </label><br>
  <input id="completion" type="text" name="completion" value="<%= @issue.completion %>"></input><br></br>  
  
  <input type="submit" value="submit">
</form>
